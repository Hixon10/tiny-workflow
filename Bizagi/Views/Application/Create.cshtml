@using Bizagi.ViewModels.Application
@model Bizagi.ViewModels.Application.CreateViewModel

@{
    ViewBag.Title = "Создание заявки";
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.RequestedMoney, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.RequestedMoney, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.RequestedMoney)
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.Category, new { @class = "col-md-2 control-label" })
            @Html.ValidationMessageFor(model => model.Category)
            <div class="col-md-10">
                @foreach (var value in Model.Caregories)
                {
                    <div class="radio">
                        @Html.RadioButtonFor(m => m.Category, value.Name)
                        @Html.Label(value.Name)
                    </div>
                }
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Отправить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Назад", "Index")
</div>
